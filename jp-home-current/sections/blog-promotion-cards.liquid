<div class="container--large {% unless section.settings.remove_margin %} container--vertical-space {% endunless %} {% if section.settings.section_background_color != "rgba(0,0,0,0)" %} container--has-background {% endif %}">
  {%- render 'section-heading',
    heading: section.settings.heading,
    subheading: section.settings.subheading,
    heading_tag: section.settings.seo_h_tag,
    button: section.settings.show_view_all,
    button_label: 'blog.view_all_articles',
    link: section.settings.show_view_all,
    layout: section.settings.section_heading_layout
  -%}
  {%- if section.settings.show_view_all and section.settings.section_heading_layout contains 'center' -%}
    <div class="gutter-top--large align-content align-content--horizontal-center">
      <a class="button button--outline button--regular" href="{{ section.settings.show_view_all }}">
        {{- 'blog.view_all_articles' | t -}}
      </a>
    </div>
  {%- endif -%}
  {%- if section.blocks.size > 0 -%}
    <div class="grid grid--layout {{ section.settings.layout }}">
      {%- for block in section.blocks -%}
        <div id="element-{{ block.id }}" class="card blog-promotion-card" {{ block.shopify_attributes }}>
          {%- if block.settings.button_label == blank and block.settings.link != blank -%}
            <a href="{{ block.settings.link }}">
          {%- else -%}
            <div>
          {%- endif -%}
          {%- if section.settings.title != blank -%}
            {%- render 'section-heading',
              heading: section.settings.title,
              subheading: section.settings.subheading,
              button: section.settings.show_view_all,
              button_label: 'blog.view_all_articles',
              link: section.settings.show_view_all,
              heading_tag: section.settings.seo_h_tag,
              layout: section.settings.section_heading_layout
            -%}
          {%- endif -%}
          <div
            class="card__image border-radius-top"
            style="padding-top:{{ 100 | divided_by: section.settings.image_aspect_ratio }}%"
          >
            {%- liquid
              unless block.settings.image == blank
                if section.settings.layout contains 'grid-4'
                  assign sizes = 'sizes="(max-width: 767px) calc(100vw - 20px), (max-width: 1024px) 50vw, (max-width: 1360px) 25vw, 320px"'
                elsif section.settings.layout contains 'grid-3'
                  assign sizes = 'sizes="(max-width: 767px) calc(100vw - 20px), (max-width: 1360px) 33vw, 420px"'
                else
                  assign sizes = 'sizes="(max-width: 767px) calc(100vw - 20px), (max-width: 1360px) 50vw, 640px"'
                endif
                render 'lazy-image', image: block.settings.image, sizes: sizes, ratio: section.settings.image_aspect_ratio, type: 'background', alt: block.settings.title
              else
                echo 'image' | placeholder_svg_tag
              endunless
            -%}
          </div>

          <div
            class="
              card__text blog-promotion-card__text
              {% if section.settings.layout contains 'grid-4' %}
                gutter--regular
              {% else %}
                gutter--large
              {% endif %}
              spacing--large
              {{ section.settings.text_alignment }} remove-empty-space
            "
          >
            {%- unless block.settings.caption == blank -%}
              <span class="text-size--{{ section.settings.caption_size }}">{{ block.settings.caption | escape }}</span>
            {%- endunless -%}

            {%- unless block.settings.title == blank -%}
              <{{ block.settings.seo_h_tag }} class="{{ section.settings.title_size }}" style="display:block">
                {{- block.settings.title | escape -}}
              </{{ block.settings.seo_h_tag }}>
            {%- endunless -%}

            {%- unless block.settings.subtitle == blank -%}
              <span class="text-size--{{ section.settings.subtitle_size }}">
                {{- block.settings.subtitle | escape -}}
              </span>
            {%- endunless -%}

            {%- if block.settings.button_label != blank -%}
              <div class="increased-spacing blog-promotion-card__button-wrapper">
                <a
                  href="{{ block.settings.link | escape }}"
                  class="button {% unless section.settings.layout contains 'grid-2' %} button--fullwidth {% endunless %} button--{{ section.settings.button_size }} button--{{ section.settings.button_style }}"
                >
                  {{- block.settings.button_label | escape -}}
                </a>
              </div>
            {%- endif -%}
          </div>

          {%- if block.settings.button_label == blank and block.settings.link != blank -%}
            </a>
          {%- else -%}
            </div>
          {%- endif -%}

          {%- render 'custom-colors',
            id: block.id,
            text: block.settings.color_text_main,
            background: block.settings.color_background_main,
            accent: block.settings.color_accent_main,
            borders: block.settings.color_borders_main,
            shadow: block.settings.color_shadow_main,
            hide_borders: block.settings.color_hide_borders,
            hide_shadow: block.settings.color_hide_shadow
          -%}
        </div>
      {%- endfor %}
    </div>
  {%- endif -%}
</div>

{%- if section.settings.section_background_color != 'rgba(0,0,0,0)' -%}
  {% style %}
    #shopify-section-{{ section.id }} .container--has-background {
      --color-background-section: {{ section.settings.section_background_color }};
    }
  {% endstyle %}
{%- endif -%}

{%- if section.settings.section_heading_color != 'rgba(0,0,0,0)' -%}
  {% style %}
    #shopify-section-{{ section.id }} {
      --color-text-main: {{ section.settings.section_heading_color }};
    }
  {% endstyle %}
{%- endif -%}
{% style %}
  #shopify-section-{{ section.id }} .blog-promotion-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Make the inner wrapper (a or div) also use flexbox */
  #shopify-section-{{ section.id }} .blog-promotion-card > a,
  #shopify-section-{{ section.id }} .blog-promotion-card > div {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    height: 100%;
  }

  #shopify-section-{{ section.id }} .blog-promotion-card__text {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  #shopify-section-{{ section.id }} .blog-promotion-card__button-wrapper {
    margin-top: auto;
    padding-top: 1rem;
  }

  /* Responsive adjustments for mobile and tablets */
  @media screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .blog-promotion-card__button-wrapper {
      padding-top: 0.75rem;
    }
  }

  @media screen and (min-width: 768px) and (max-width: 1024px) {
    #shopify-section-{{ section.id }} .blog-promotion-card__button-wrapper {
      padding-top: 0.875rem;
    }
  }
{% endstyle %}
